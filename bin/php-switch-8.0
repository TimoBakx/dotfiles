#!/bin/sh

echo "Stopping apache"
sudo apachectl stop

brew unlink php@5.6 php@7.4 php@8.1 php@8.2 php@8.3 php
brew link php@8.0

echo "Linking apache configuration for PHP 8.0"
unlink /opt/homebrew/etc/httpd/php.conf
ln -s /opt/homebrew/etc/httpd/php8.0.conf /opt/homebrew/etc/httpd/php.conf

echo "Starting apache"
sudo apachectl start
