#!/bin/sh

echo "Stopping apache"
sudo apachectl stop

brew unlink php@7.4
brew unlink php@8.0
brew unlink php@8.1
brew link php

echo "Linking apache configuration for PHP 8.2"
unlink /opt/homebrew/etc/httpd/php.conf
ln -s /opt/homebrew/etc/httpd/php8.2.conf /opt/homebrew/etc/httpd/php.conf

echo "Starting apache"
sudo apachectl start
